          { "action": "navigate", "url": "{{loginUrl}}" },
          { "action": "wait", "selector": "#login_id", "timeout": 5000 },
          { "action": "input", "selector": "#login_id", "value": "{{login_id}}" },
          { "action": "input", "selector": "#password", "value": "{{password}}" },
